= form_for @detail do |f|
  - if @detail.errors.any?
    #error_explanation
      %h2= "#{pluralize(@detail.errors.count, "error")} prohibited this detail from being saved:"
      %ul
        - @detail.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :content
    = f.text_field :content
  .actions
    = f.submit 'Save'
