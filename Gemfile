source 'https://rubygems.org'

# Rails
gem 'rails', '~> 3.2.6'
# Devise
gem 'devise'
# Haml
gem 'haml-rails'
# Mongo 
gem 'mongoid'
gem 'bson_ext'
# Jquery
gem 'jquery-rails'

# Deploy with Capistrano
# gem 'capistrano'

# To use debugger
# gem 'debugger'

